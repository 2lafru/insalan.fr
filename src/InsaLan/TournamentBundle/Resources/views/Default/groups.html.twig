<aside class="matches">
  <header>
    <h3>Matches</h3>
  </header>
  {% for g in groups %}
    <table id="grpm{{ g.id }}">
    <caption>{{ g.name }}</caption>
    {% for m in g.matches %}
      <tr data-p1="{{ m.match.part1.id }}" data-p2="{{ m.match.part2.id }}">
        <td>
          {{ m.match.part1.name }} <em>vs</em> {{ m.match.part2.name }}<br/>

          {% for r in m.match.rounds %}
            {% if r.replay %}<a href="{{ asset('uploads/demos/' ~ r.replay) }}">{% endif %}
              [{{ r.score1 }}-{{ r.score2 }}]
            {% if r.replay %}</a>{% endif %}
          {% endfor %}
        </td>
      </tr>
    {% endfor %}
    </table>
{% endfor %}
</aside>

<aside class="groups">
  <header>
    <h3>Poules</h3>
  </header>
{% for g in groups %}
  <table data-gid="{{ g.id }}">
    <caption>{{ g.name }}</caption>
      {% for p in g.participants %}
      <tr>
        <td>{{ p.participant.name }}</td>
        <td>{{ p.won }}</td>
        <td>{{ p.lost }}</td>
        <td>{{ p.draw }}</td>
      </tr>
    {% endfor %}
  </table>
{% endfor %}
</aside>
