{% extends 'InsaLanTournamentBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets 'bundles/insalan/css/tournament.css' filter='cssrewrite' %}
      <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block title %}
  {{ parent() }} - Joueurs
{% endblock %}

{% block body %}
{{ parent() }}

<article>
  <header>
    <h2>Joueurs valid√©s</h2>
  </header>

  <section>
    {% set count=0 %}
    {% for p in players %}
    {% if p.validated == 2 %}
    <div class="frame frame-active grid-5 pull-left">
        <header>
            <div class="title pull-left">
                {{count + 1}}. {{ p.name }}
            </div>
            <br class="clear">
        </header>
    </div>
    {% set count=count+1 %}
        {% if count % 2 == 0%}
        <br class="clear">
        {% endif %}
    {% endif %}
    {% endfor %}
    <br class="clear">
  </section>
</article>

<article>
  <header>
    <h2>Joueurs en cours d'inscription</h2>
  </header>

  <section>
    {% set count=0 %}
    {% for p in players %}
    {% if p.validated != 2 %}
    <div class="frame frame-active grid-5 pull-left">
        <header>
            <div class="title pull-left">
                {{count+1}}. {{ p.name }}
            </div>
            <br class="clear">
        </header>
    </div>
    {% set count=count+1 %}
        {% if count % 2 == 0%}
        <br class="clear">
        {% endif %}
    {% endif %}
    {% endfor %}
    <br class="clear">
  </section>
</article>

{% endblock %}

