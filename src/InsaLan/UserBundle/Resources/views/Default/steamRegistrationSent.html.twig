{% extends 'InsaLanUserBundle::layout.html.twig' %}
{% block body %}
{{ parent() }}

<div class="frame frame-active">
    <header class="full">
        <div class="step pull-left">
            &#x2699;
        </div>
        <h2 class="title pull-left">Mon profil</h2>
        <br class="clear">
    </header>
    {% if erreur is defined %}

        <div class="text">
            <div>
                Une erreur est survenue lors de la validation du compte. Veuillez réessayer.
            </div>
            <div>
                    <a class="btn btn-primary" href="{{path('insalan_user_default_registersteamid')}}">Réessayer</a>
            </div>
        </div>
    {% else %}
        <div class="text">
            <div>
                Votre id steam a été sauvegardé !
            </div>
            <div>
                    <a class="btn btn-primary" href="{{path('insalan_user_default_index')}}">Retour au profil</a>
            </div>
        </div>

            
        
    {% endif %}
{% endblock %}