{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<article>
  <aside>
    <div class="square">
      <a href="#body"><span></span></a>
    </div>
  </aside>

  <header>
    <h2>Mon équipe {{ app.user.player.team.name }}</h2>
  </header>

  {% for player in app.user.player.team.players %}
  <div class="frame frame-active grid-10 pull-left">
    <header>
      <div class="pull-left" style="height:60px">
        <img height="60" src="http://ddragon.leagueoflegends.com/cdn/4.17.1/img/profileicon/{{ player.lolPicture }}.png">
      </div>
      <div class="title pull-left">
        {{ player.name }}
      </div>
      {% if app.user.player.team.captain.id == player.id %}
      <div class="title pull-right">
        Capitaine
      </div>
      {% elseif app.user.player.team.captain.id == app.user.player.id %}
      <div class="pull-right" style="line-height: 60px; margin-right: 10px">
        <form action="{{ path('insalan_tournament_default_setcaptain') }}" method="POST">
            <input type="number" style="display:none;" name="team_id" value="{{ player.team.id }}">
            <input type="number" style="display:none;" name="player_id" value="{{ player.id }}">
            <input type="submit" value="Promouvoir Capitaine">
        </form>
      </div>
      {% endif %}
      <br class="clear">
    </header>
  </div>
  {% endfor %}
  <br class="clear">
  <a href="{{ path('insalan_user_default_teamidlolleave') }}">[Quitter mon équipe]</a>
</article>

<article>
  <aside>
    <div class="square">
      <a href="#body"><span></span></a>
    </div>
  </aside>

  <header>
    <h2>Mes prochains matchs</h2>
  </header>

  <p>
    Les matchs seront affichés le 25 octobre à 00h00.
  </p>
</article>


{% endblock fos_user_content %}
