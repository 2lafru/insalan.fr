{% extends 'InsaLanUserBundle::layout.html.twig' %}
{% block body %}
{{ parent() }}

<div class="frame frame-active">
    <header class="full">
        <div class="step pull-left">
            &#x2699;
        </div>
        <h2 class="title pull-left">Mon profil</h2>
        <br class="clear">
    </header>
    <div class="text">
        {% if erreur is defined %}
            Une erreur est survenue lors de la sauvegarde du compte !
            <div>
                <a href="{{path ('insalan_user_default_index')}}" class="btn btn-primary">Retour au profil</a>
            </div>
        {% else %}
            {% if battletag is defined %}
                Votre BattleTag est : {{battletag}}
                <div>
                    <a href="{{ path ('insalan_user_default_registerbattlenet', {'action': 'remove'}) }}" class="btn btn-primary">Retirer ce compte</a>
                </div>
            {% else %}
                {% if url is defined%}
                    <a href="{{url}}" class="btn btn-primary">Se connecter</a>
                {% endif %}
            {% endif %}
        {% endif %}
    </div>
{% endblock %}