<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8"/>
    {% block stylesheets %}
      {% stylesheets
        'bundles/insalan/css/global.css'
        'bundles/insalan/css/info.css'
        'bundles/insalan/css/tournament.css'
        filter='cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
      {% endstylesheets %}
    {% endblock %}

    <link href="{{ asset('bundles/insalan/img/favicon.png') }}" rel="icon" type="image/png"/>
    <title>{% block title %}InsaLan{% endblock %}</title>

    <!--[if lt IE 9]>
      <script src="{{ asset('bundles/insalan/js/html5shiv.js') }}"></script>
    <![endif]-->
  </head>

  <body id="body">
    <header>
      <div class="container">
        <div class="logo">
          <div class="pattern"></div>
          <a href="{{ path('insalan_information_default_home') }}">
            <img src="{{ asset('bundles/insalan/img/logo-noyear.png') }}" alt="InsaLan"/></a>
        </div>

        {% block top_infos %}
        <aside>
          <span class="day">{{ free_slots.get() }}</span>
          <span class="month">Slots</span>
          <span class="place">restants</span>
        </aside>
        

        <nav>
          <ul>
            <li><a href="{{ path('insalan_information_default_home') }}">Accueil</a></li>
            <li><a href="{{ path('insalan_tournament_default_teamlist') }}">Équipes</a></li>
            <li><a href="{{ path('insalan_information_default_rules') }}">Règlement</a></li>
          {% if app.user %}
            <li><a href="{{ path('insalan_tournament_user_index') }}">Mon espace</a></li>
            <li><a href="{{ path('fos_user_security_logout') }}">Déconnexion</a></li>
          {% else %}
            <li><a href="{{ path('insalan_tournament_user_index') }}">Connexion</a></li>
            <li><a href="{{ path('fos_user_registration_register') }}">Inscription</a></li>
          {% endif %}
          </ul>
        </nav>
        {% endblock %}
      </div>
    </header>

    <section class="container">
      {% for message in app.session.flashbag.get('info') %}
        <p class="alert-info">{{ message }}</p>
      {% endfor %}

      {% for message in app.session.flashbag.get('error') %}
        <p class="alert-error">{{ message }}</p>
      {% endfor %}

      {% block body %}{% endblock %}

      <div class="clear"></div>
    </section>

    <footer>
      <div>
        <aside>
          <div>
            <a id="logo" href="{{ path('insalan_information_default_home') }}"></a>
            <a id="facebook" href="https://www.facebook.com/insalan"></a>
            <a id="twitter" href="https://twitter.com/insalan"></a>
            <div id="mail"><a href="mailto:contact@insalan.fr">contact@insalan.fr</a></div>
          </div>
        </aside>
        
        {% block bottom_infos %}
        <nav>
          <ul>
            {% if free_slots.opened %}
            <li>
              <header><a href="{{ path('insalan_tournament_default_index') }}">Qualifications</a></header>
              <div>
                <ul>
                  <li><a href="{{ path('insalan_information_default_home') }}">Accueil</a></li>
                  <li><a href="{{ path('insalan_information_default_rules') }}">Règlement</a></li>
                  <li><a href="{{ path('insalan_user_default_index') }}">Connexion</a></li>
                  <li><a href="{{ path('fos_user_registration_register') }}">Inscription</a></li>
                </ul>
              </div>
            </li>
            {% endif %}
            
            <li>
              <header><a href="{{ path('insalan_information_default_index') }}">Infos</a></header>
              <div>
                <ul>
                  <li><a href="{{ path('insalan_information_default_home') }}#rewards">Récompenses</a></li>
                  <li><a href="{{ path('insalan_information_default_home') }}#organization">Déroulement</a></li>
                  <li><a href="{{ path('insalan_information_default_home') }}#games">Jeux</a></li>
                  <li><a href="{{ path('insalan_information_default_home') }}#price">Prix</a></li>
                </ul>
              </div>
            </li>
            
            <li>
              <header><a href="{{ path('insalan_stream_default_index') }}">InsaLan.fr</a></header>
              <ul>
                <li><a href="http://www.insalan.fr/news/">News</a></li>
                <li><a href="http://www.insalan.fr/gallery/">Galerie</a></li>
                <li><a href="http://www.insalan.fr/forum/">Forum</a></li>
                <li><a href="http://www.insalan.fr/pages/contact">Contact</a></li>
              </ul>
            </li>
          </ul>
        </nav>
        {% endblock %}
        <div id="copyright">
          <p>
            © 2014 InsaLan <span>|</span>
            Design by <a href="http://www.alecahain.fr/">Aceltis</a> <span>|</span>
            Code by <a href="http://nhurman.fr/">Nicolas</a> &amp; <a href="http://quentin.dufour.tk">Quentin</a>
          </p>
        </div>
      </div>
    </footer>

    {% block javascripts %}
      {% javascripts
        'bundles/insalan/js/mootools-core-1.4.5.js'
        'bundles/insalan/js/mootools-more-1.4.0.1.js'
        'bundles/insalan/js/global.js' %}
          <script type="text/javascript" src="{{ asset_url }}"></script>
      {% endjavascripts %}
      <script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', '{{ ga_tracking }}', 'auto');
  ga('send', 'pageview');

    </script>
    {% endblock %}
  </body>
</html>

